
default_platform(:ios)

platform :ios do
    desc "Run all unit tests"
    lane :tests do
        scan(
            scheme: ENV["SCHEME"],
            package_path: ".",
            device: "iPhone 8",
            clean: true,
            result_bundle: true
        )
    end

    desc "Pod linting"
    lane :pod_lint do
        pod_lib_lint(allow_warnings: true)
    end

    desc "Release a new version"
    lane :release do |options|
        target_version = options[:version]
        raise "The version is missed. Use `fastlane release version:{version_number}`.`" if target_version.nil?

        ensure_git_branch
        ensure_git_status_clean

        podspec = ENV["PODSPEC"]
        version_bump_podspec(path: podspec, version_number: target_version)
        increment_build_number
        increment_version_number(
            version_number: target_version
        )
        git_add
        git_commit(
            path: ["OverlayContainer.podspec"],
            message: "Bump to #{target_version}"
        )
        ensure_git_status_clean
        add_git_tag(tag: target_version)
        if UI.confirm("Push?")
            push_to_git_remote
            push_git_tags(tag: target_version)
            UI.success "Pushed ðŸŽ‰"
        end
        if UI.confirm("Release pod?")
            pod_push
            UI.success "Released ðŸŽ‰"
        end
    end
end
